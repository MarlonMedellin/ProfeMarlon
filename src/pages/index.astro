---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Icon } from "astro-icon/components";

const stats = [
    {
        label: "Integro datos tecnología y pedagogía para decisiones educativas basadas en evidencia fortaleciendo prácticas docentes gestión institucional aprendizaje significativo y mejora.",
        value: "Evidencia",
        icon: "lucide:line-chart",
    },
    {
        label: "Conecto datos tecnología y pedagogía creando puentes entre análisis aula y liderazgo escolar para transformar experiencias y resultados de aprendizaje.",
        value: "Puente",
        icon: "lucide:link-2",
    },
    {
        label: "Produzco videos guías y recursos digitales claros rigurosos y accesibles que promueven comprensión profunda práctica autónoma y transferencia contextual duradera.",
        value: "Contenido",
        icon: "lucide:video",
    },
    {
        label: "Diseño experiencias de gamificación con narrativa retos retroalimentación y tecnología para aumentar motivación participación colaboración y comprensión conceptual en aula.",
        value: "Juego",
        icon: "lucide:gamepad-2",
    },
];

const specialties = [
    {
        title: "Gestión educativa basada en datos",
        desc: "Acompaño equipos directivos en lectura de datos para planear metas escolares, priorizar recursos, monitorear avances y fortalecer cultura de mejora.",
        icon: "lucide:bar-chart-2",
    },
    {
        title: "Formación docente",
        desc: "Formo docentes mediante talleres prácticos que integran didáctica, tecnología y analítica, promoviendo reflexión pedagógica, colaboración y mejora continua en aula.",
        icon: "lucide:users",
    },
    {
        title: "Innovación curricular STEAM",
        desc: "Diseño experiencias STEAM que articulan matemáticas ciencia y tecnología con problemas fomentando creatividad pensamiento crítico trabajo colaborativo y aprendizaje interdisciplinar.",
        icon: "lucide:atom",
    },
    {
        title: "Transformación digital educativa",
        desc: "Oriento instituciones en transformación digital educativa implementando plataformas interoperables flujos de trabajo automatizados analítica integrada y prácticas pedagógicas coherentes sostenibles.",
        icon: "lucide:workflow",
    },
];
---

<BaseLayout title="ProfeMarlon | Docente, Analítica & Tecnología Educativa">
    <Navbar />

    <main class="flex-1">
        <!-- Hero Section -->
        <section
            class="px-6 lg:px-40 py-12 lg:py-24 bg-gradient-to-b from-white to-background-light dark:from-background-dark dark:to-background-dark/95"
        >
            <div class="mx-auto max-w-[1280px]">
                <div
                    class="flex flex-col-reverse lg:flex-row items-center gap-12"
                >
                    <!-- Left Content -->
                    <div
                        class="flex flex-1 flex-col gap-8 text-center lg:text-left"
                    >
                        <div class="flex flex-col gap-4">
                            <span
                                class="text-primary font-bold uppercase tracking-widest text-sm"
                                >Bienvenido a mi espacio</span
                            >
                            <h1
                                class="text-4xl font-black leading-tight tracking-tight text-gray-900 dark:text-white sm:text-6xl"
                            >
                                Marlon Arcila
                            </h1>
                            <h2
                                class="text-xl font-medium text-gray-600 dark:text-gray-400 sm:text-2xl"
                            >
                                Docente, Analítica & Tecnología Educativa
                            </h2>
                            <p
                                class="text-base lg:text-lg text-gray-600 dark:text-gray-300 max-w-[600px] leading-relaxed mx-auto lg:mx-0"
                            >
                                Acompaño a instituciones y equipos educativos a
                                convertir datos en decisiones pedagógicas con
                                impacto real en el aprendizaje. Combino
                                pensamiento analítico, herramientas digitales y
                                didáctica para mejorar prácticas, resultados y
                                experiencias educativas.
                            </p>
                        </div>
                        <div
                            class="flex flex-wrap justify-center lg:justify-start gap-4"
                        >
                            {
                                (
                                    <a
                                        href="https://www.canva.com/design/DAGVwuji4Y8/H_scnSlJtDv8w33DEUfErA/view?utm_content=DAGVwuji4Y8&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h02f0ba5e45"
                                        target="_blank"
                                        class="flex min-w-[160px] items-center justify-center rounded-xl bg-primary h-12 lg:h-14 px-6 text-white text-base font-bold shadow-lg shadow-primary/20 hover:scale-[1.02] active:scale-[0.98] transition-all"
                                    >
                                        <Icon
                                            name="lucide:download"
                                            class="mr-2 w-5 h-5"
                                        />
                                        <span>Descargar CV</span>
                                    </a>
                                )
                            }
                            <a
                                href="https://t.me/profemarlon"
                                target="_blank"
                                class="flex min-w-[160px] items-center justify-center rounded-xl border-2 border-primary/20 bg-transparent h-12 lg:h-14 px-6 text-gray-900 dark:text-white text-base font-bold hover:bg-primary/5 transition-all"
                            >
                                <Icon name="lucide:send" class="mr-2 w-5 h-5" />
                                <span>Telegram</span>
                            </a>
                        </div>
                    </div>
                    <!-- Right Image -->
                    <div class="flex-1 w-full max-w-[500px]">
                        <div class="relative group">
                            <div
                                class="absolute -inset-1 bg-gradient-to-r from-primary to-blue-400 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-1000"
                            >
                            </div>
                            <div
                                class="relative aspect-square overflow-hidden rounded-2xl bg-gray-200 dark:bg-gray-800 shadow-2xl"
                            >
                                <img
                                    src="/images/IMG_20250910_184319.jpg"
                                    alt="Marlon Arcila"
                                    class="h-full w-full object-cover object-center filter contrast-[1.05]"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Stats Bar -->
        <section class="px-6 lg:px-40 py-12 bg-white dark:bg-black/10">
            <div class="mx-auto max-w-[1280px]">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    {
                        stats.map((stat) => (
                            <div class="flex flex-col items-center justify-center p-6 rounded-xl border border-gray-200 dark:border-gray-800 bg-background-light/50 dark:bg-background-dark/50 transition-transform hover:scale-105">
                                <Icon
                                    name={stat.icon}
                                    class="text-primary mb-2 text-3xl w-8 h-8"
                                />
                                <p class="text-3xl font-black text-gray-900 dark:text-white">
                                    {stat.value}
                                </p>
                                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">
                                    {stat.label}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Specialty Section -->
        <section class="px-6 lg:px-40 py-20">
            <div class="mx-auto max-w-[1280px]">
                <div class="mb-12 flex flex-col gap-4 text-center lg:text-left">
                    <h2
                        class="text-3xl font-black tracking-tight text-gray-900 dark:text-white lg:text-4xl"
                    >
                        Áreas de Especialidad
                    </h2>
                    <p
                        class="text-lg text-gray-600 dark:text-gray-400 max-w-[720px]"
                    >
                        Puente entre analítica, herramientas digitales y
                        práctica pedagógica con evidencia.
                    </p>
                </div>
                <div
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6"
                >
                    {
                        specialties.map((item) => (
                            <div class="flex flex-col gap-5 rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-background-dark p-8 hover:shadow-xl transition-all hover:-translate-y-1">
                                <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary">
                                    <Icon
                                        name={item.icon}
                                        class="text-3xl w-6 h-6"
                                    />
                                </div>
                                <div class="flex flex-col gap-2">
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                                        {item.title}
                                    </h3>
                                    <p class="text-sm leading-relaxed text-gray-600 dark:text-gray-400">
                                        {item.desc}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="px-6 lg:px-40 py-20 bg-primary/5 dark:bg-primary/10">
            <div class="mx-auto max-w-[960px] text-center">
                <div class="flex flex-col items-center gap-8">
                    <div class="flex flex-col gap-4">
                        <h2
                            class="text-3xl font-black tracking-tight text-gray-900 dark:text-white sm:text-4xl"
                        >
                            ¿Interesado en colaborar?
                        </h2>
                        <p
                            class="text-lg text-gray-600 dark:text-gray-300 max-w-[600px] mx-auto"
                        >
                            Estoy disponible para proyectos de consultoría,
                            formación corporativa y conferencias sobre
                            tecnología y educación.
                        </p>
                    </div>
                    <div class="flex justify-center w-full">
                        <a
                            href="https://t.me/profemarlon"
                            target="_blank"
                            class="flex min-w-[240px] items-center justify-center rounded-xl bg-primary h-14 px-8 text-white text-lg font-bold shadow-lg shadow-primary/20 hover:scale-[1.02] transition-all"
                        >
                            <Icon
                                name="lucide:message-circle"
                                class="mr-2 w-6 h-6"
                            />
                            <span>Contactar por Telegram</span>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</BaseLayout>
