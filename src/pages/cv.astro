---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Icon } from "astro-icon/components";
---

<BaseLayout
    title="Curriculum Vitae | Profe Marlon"
    description="Hoja de vida profesional de Marlon Arcila. Experiencia en Docencia, Analítica y Tecnología Educativa."
    image="/og-image.png"
>
    <Navbar />

    <main
        class="flex-1 flex flex-col items-center justify-center py-20 px-6 bg-background-light dark:bg-background-dark min-h-[60vh]"
    >
        <div class="text-center max-w-2xl mx-auto space-y-8">
            <h1 class="text-4xl font-black text-gray-900 dark:text-white">
                Curriculum Vitae
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-400">
                Puedes ver o descargar mi hoja de vida actualizada en formato
                PDF.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/cv-marlon.pdf"
                    download
                    class="flex items-center justify-center rounded-xl bg-primary h-14 px-8 text-white text-lg font-bold shadow-lg shadow-primary/20 hover:scale-[1.02] transition-all"
                >
                    <Icon name="lucide:download" class="mr-2 w-6 h-6" />
                    <span>Descargar PDF</span>
                </a>
                <a
                    href="/cv-marlon.pdf"
                    target="_blank"
                    class="flex items-center justify-center rounded-xl border-2 border-primary text-primary h-14 px-8 text-lg font-bold hover:bg-primary/5 transition-all"
                >
                    <Icon name="lucide:eye" class="mr-2 w-6 h-6" />
                    <span>Ver Online</span>
                </a>
            </div>
        </div>
    </main>

    <Footer />
</BaseLayout>
