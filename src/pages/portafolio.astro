---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

import img1 from "../assets/images/IMG_20250701_142949.jpg";
import img2 from "../assets/images/IMG_20250702_121259.jpg";
import img3 from "../assets/images/IMG_20250702_202720.jpg";
import img4 from "../assets/images/IMG_20250702_202731.jpg";
import img5 from "../assets/images/IMG_20250704_195144.jpg";
import img6 from "../assets/images/IMG_20250713_115836.jpg";

const projects = [
    {
        title: "Analítica en el Aula",
        category: "EdTech",
        desc: "Sistema integral de monitoreo en tiempo real para optimizar el aprendizaje mediante el análisis de datos pedagógicos.",
        date: "Marzo 2024",
        image: img1,
    },
    {
        title: "Dashboard Académico",
        category: "Analytics",
        desc: "Visualización avanzada de indicadores clave para el seguimiento del rendimiento estudiantil a nivel institucional.",
        date: "Enero 2024",
        image: img2,
    },
    {
        title: "Estrategias EdTech 2024",
        category: "Consultoría",
        desc: "Plan de implementación de tecnologías emergentes para centros educativos de educación media y superior.",
        date: "Diciembre 2023",
        image: img3,
    },
    {
        title: "Procesamiento de Big Data",
        category: "Data",
        desc: "Pipeline de limpieza y procesamiento masivo de datos para plataformas de evaluación estandarizada.",
        date: "Octubre 2023",
        image: img4,
    },
    {
        title: "UX para E-learning",
        category: "LMS",
        desc: "Rediseño de interfaz y experiencia de usuario para mejorar la tasa de finalización en cursos virtuales.",
        date: "Agosto 2023",
        image: img5,
    },
    {
        title: "Smart Campus IoT",
        category: "IoT",
        desc: "Implementación de sensores para la gestión eficiente de espacios educativos y control de asistencia automatizado.",
        date: "Junio 2023",
        image: img6,
    },
];

const categories = ["Todos", "Educación", "Analítica", "EdTech", "Dashboards"];
---

<BaseLayout title="Portafolio | ProfeMarlon">
    <Navbar />

    <main class="max-w-[1200px] mx-auto px-6 py-12">
        <!-- Page Heading -->
        <div class="mb-12">
            <div
                class="flex flex-col md:flex-row md:items-end justify-between gap-6"
            >
                <div class="max-w-2xl">
                    <h1
                        class="text-4xl md:text-5xl font-black tracking-tight mb-4 text-gray-900 dark:text-white"
                    >
                        Portafolio de Proyectos
                    </h1>
                    <p class="text-gray-600 dark:text-gray-400 text-lg">
                        Explora mis trabajos en Analítica de Datos y Tecnología
                        Educativa, transformando la educación a través de la
                        innovación digital.
                    </p>
                </div>
            </div>
        </div>

        <!-- Filters (Chips) -->
        <div
            class="flex flex-wrap gap-3 mb-10 pb-4 border-b border-gray-100 dark:border-gray-800"
        >
            {
                categories.map((cat, i) => (
                    <button
                        class:list={[
                            "px-6 py-2 rounded-full text-sm font-medium transition-colors",
                            i === 0
                                ? "bg-primary text-white font-semibold"
                                : "bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-300 hover:border-primary",
                        ]}
                    >
                        {cat}
                    </button>
                ))
            }
        </div>

        <!-- Image Grid (Project Cards) -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                projects.map((project) => (
                    <div class="group bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700">
                        <div class="relative aspect-video overflow-hidden">
                            <Image
                                src={project.image}
                                alt={project.title}
                                width={600}
                                height={337}
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                            />
                            <div class="absolute top-4 left-4">
                                <span class="bg-primary/90 backdrop-blur-sm text-white text-[10px] font-bold uppercase tracking-widest px-2 py-1 rounded">
                                    {project.category}
                                </span>
                            </div>
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors text-gray-900 dark:text-white">
                                {project.title}
                            </h3>
                            <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-4">
                                {project.desc}
                            </p>
                            <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-50 dark:border-gray-700">
                                <span class="text-xs font-semibold text-gray-400">
                                    {project.date}
                                </span>
                                <a
                                    href="#"
                                    class="flex items-center gap-1 text-primary text-sm font-bold hover:underline"
                                >
                                    Ver proyecto
                                    <Icon
                                        name="lucide:arrow-right"
                                        class="w-4 h-4"
                                    />
                                </a>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- CTA Section -->
        <div
            class="mt-24 bg-primary/5 dark:bg-primary/10 rounded-3xl p-10 md:p-16 overflow-hidden relative border border-primary/20"
        >
            <div
                class="relative z-10 flex flex-col md:flex-row items-center justify-between gap-10"
            >
                <div class="max-w-xl text-center md:text-left">
                    <h2
                        class="text-3xl md:text-4xl font-black mb-4 tracking-tight text-gray-900 dark:text-white"
                    >
                        ¿Tienes un proyecto en mente?
                    </h2>
                    <p class="text-gray-600 dark:text-gray-300 text-lg">
                        Trabajemos juntos para transformar la educación con
                        datos y tecnología. Estoy disponible para consultorías y
                        nuevos retos.
                    </p>
                </div>
                <div>
                    <a
                        href="https://t.me/profemarlon"
                        target="_blank"
                        class="inline-block bg-primary text-white px-8 py-4 rounded-xl text-lg font-bold shadow-lg shadow-primary/30 hover:shadow-xl hover:-translate-y-1 transition-all"
                    >
                        Hablemos ahora
                    </a>
                </div>
            </div>
            <!-- Decorative circles -->
            <div
                class="absolute -right-20 -bottom-20 w-64 h-64 bg-primary/20 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute -left-20 -top-20 w-64 h-64 bg-primary/10 rounded-full blur-3xl"
            >
            </div>
        </div>
    </main>

    <Footer />
</BaseLayout>
