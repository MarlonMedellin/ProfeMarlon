---
import { ViewTransitions } from "astro:transitions";
import SocialMeta from "../components/SocialMeta.astro";

interface Props {
    title: string;
    description?: string;
    image?: string;
}

const {
    title,
    description = "Transformo datos en mejores aprendizajes mediante analítica, tecnología educativa y didáctica con impacto.",
    image = "/og-image.png",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="light">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <SocialMeta title={title} description={description} image={image} />

        <!-- Google Fonts: Inter -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
            rel="stylesheet"
        />

        <ViewTransitions />
    </head>
    <body
        class="bg-background-light dark:bg-background-dark font-sans text-gray-900 dark:text-white transition-colors duration-300"
    >
        <slot />
        <style is:global>
            :root {
                --primary: #003366;
            }
            html {
                scroll-behavior: smooth;
            }
            /* Custom scrollbar for a premium feel */
            ::-webkit-scrollbar {
                width: 8px;
            }
            ::-webkit-scrollbar-track {
                background: #f1f1f1;
            }
            ::-webkit-scrollbar-thumb {
                background: var(--primary);
                border-radius: 4px;
            }
            ::-webkit-scrollbar-thumb:hover {
                background: #002244;
            }
        </style>
    </body>
</html>
