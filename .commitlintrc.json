{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "style",
                "seo",
                "refactor",
                "perf",
                "docs",
                "test",
                "chore",
                "ci"
            ]
        ],
        "subject-case": [
            2,
            "always",
            "lower-case"
        ]
    }
}